<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="SemiTransparentBar" parent="AppTheme">
    </style>

    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MapCardTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#77000000</item>
    </style>

    <style name="MapCardDescription" parent="@android:style/TextAppearance">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#77000000</item>
    </style>

</resources>
